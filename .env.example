# .env.example
# PayPal Pipeline Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GOOGLE CLOUD PLATFORM CONFIGURATION
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-paypal-data-bucket
BQ_DATASET=paypal_data
BQ_TABLE=transactions

# Google Cloud Authentication
# Path to your service account key file
GOOGLE_APPLICATION_CREDENTIALS=./sa-key.json

# =============================================================================
# PAYPAL API CONFIGURATION
# =============================================================================
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_SANDBOX=true

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
ENVIRONMENT=dev
LOG_LEVEL=INFO
PIPELINE_MODE=run

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true

# Airflow Web UI credentials
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# =============================================================================
# DATABASE CONFIGURATION (for Airflow)
# =============================================================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# =============================================================================
# MONITORING CONFIGURATION (optional)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Fernet key for Airflow (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW__CORE__FERNET_KEY=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Maximum number of retries for API calls
MAX_RETRIES=3

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Batch size for processing
BATCH_SIZE=500

# =============================================================================
# ALERTING CONFIGURATION (optional)
# =============================================================================
ALERT_EMAIL=data-alerts@your-company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# DATA RETENTION CONFIGURATION
# =============================================================================
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_DATA_VALIDATION=true
ENABLE_MONITORING=true
ENABLE_AUTO_RETRY=true
CREATE_BQ_VIEWS=true

# =============================================================================
# DEBUG OPTIONS
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN=false

# =============================================================================
# TERRAFORM VARIABLES (for infrastructure deployment)
# =============================================================================
TF_VAR_project_id=${GCP_PROJECT_ID}
TF_VAR_gcs_bucket_name=${GCS_BUCKET}
TF_VAR_bq_dataset_id=${BQ_DATASET}
TF_VAR_environment=${ENVIRONMENT}